@model IEnumerable<JobApplicationMVCApp.Models.JobPosting>

@{
    ViewData["Title"] = "Job Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="govuk-width-container">
    <main class="govuk-main-wrapper" id="main-content">
        <h1 class="govuk-heading-xl">Job Listings</h1>
    
<p>
    <a asp-action="Create" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
        Create New
        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
        </svg>
    </a>
</p>
<table class="govuk-table">
    <thead class="govuk-table__head">
        <tr class="govuk-table__row">
            <th class="govuk-table__header">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="govuk-table__header">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="govuk-table__header">
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th class="govuk-table__header">
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th class="govuk-table__header"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="govuk-table__row">
            <td class="govuk-table__cell">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="govuk-table__cell">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="govuk-table__cell">
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td class="govuk-table__cell">
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td class="govuk-table__cell">
                <div class="govuk-button-group">
                    <a class="govuk-button govuk-button--secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="govuk-button govuk-button--secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="govuk-button govuk-button--warning" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
    </main>
</div>